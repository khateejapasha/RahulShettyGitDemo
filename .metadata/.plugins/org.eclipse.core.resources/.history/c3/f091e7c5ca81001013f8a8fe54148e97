package Amazon;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;

public class Amazonhome {
WebDriver driver;
	@FindBy(id = "nav-bb-search")private WebElement searchBox;
	@FindBy(xpath = "//*[@class='nav-bb-button']")private WebElement SearchIcon;
	

	public Amazonhome(WebDriver driver)
	{
		this.driver=driver;
	}
	
	public void Search()
	{
		searchBox.sendKeys("shirts for men");
	}
	
	public void Searchmagnifier()
	{
		SearchIcon.click();
	}
	

}
