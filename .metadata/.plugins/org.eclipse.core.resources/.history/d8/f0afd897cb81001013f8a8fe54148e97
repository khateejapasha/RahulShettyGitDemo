package Amazon;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;

public class Amazonhome {
WebDriver driver;
	@FindBy(xpath = "(//*[@class='srcDest___aa6db3'])[1]")private WebElement from;
	@FindBy(xpath = "(//*[@class='srcDest___aa6db3'])[2]")private WebElement To;
	@FindBy(xpath = "//*[@class='icon___0039d4 icon icon-date_range']")private WebElement date;
	

	public Amazonhome(WebDriver driver)
	{
		this.driver=driver;
	}
	
	public void Source()
	{
		from.sendKeys("Shivaji chowk,Latur");
	}
	
	public void Destination()
	{
		To.sendKeys("Mumbai");
	}
	public void Calendar()
	{
		date.click();
	}
	

}
